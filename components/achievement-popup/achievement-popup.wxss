/* components/achievement-popup/achievement-popup.wxss */
.achievement-popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.achievement-popup-content {
  width: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.25);
  opacity: 0;
  transform: scale(0.8);
  max-width: 600rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.achievement-header {
  position: relative;
  padding: 36rpx;
  background: linear-gradient(135deg, #48C9B0, #3498DB);
  color: #fff;
  text-align: center;
  border-bottom: 4rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.achievement-title {
  font-size: 36rpx;
  font-weight: bold;
}

.close-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 40rpx;
  color: #fff;
  border-radius: 50%;
}

.achievement-body {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.achievement-icon {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 30rpx;
  border: 8rpx solid #48C9B0;
  box-shadow: 0 8rpx 20rpx rgba(72, 201, 176, 0.3);
  background-color: #f5f5f5;
  padding: 10rpx;
  position: relative;
  z-index: 1;
}

.achievement-icon::after {
  content: '';
  position: absolute;
  top: -10rpx;
  left: -10rpx;
  right: -10rpx;
  bottom: -10rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(72, 201, 176, 0.2), transparent 70%);
  z-index: -1;
}

.achievement-info {
  text-align: center;
}

.achievement-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.achievement-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  display: block;
}

.achievement-score {
  font-size: 30rpx;
  color: #48C9B0;
  font-weight: bold;
  background: rgba(72, 201, 176, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  display: inline-block;
}

.achievement-footer {
  padding: 30rpx 40rpx 40rpx;
  display: flex;
  justify-content: center;
  flex-direction: row;
  background-color: #f9f9f9;
  border-top: 2rpx solid #eee;
  align-items: center;
}

.view-detail-btn {
  background: linear-gradient(135deg, #48C9B0, #3498DB);
  color: #fff;
  border-radius: 40rpx;
  font-size: 30rpx;
  padding: 16rpx 40rpx;
  font-weight: bold;
  box-shadow: 0 6rpx 15rpx rgba(72, 201, 176, 0.4);
  border: none;
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
  text-align: center;
}

.view-detail-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(72, 201, 176, 0.3);
  opacity: 0.9;
}

.view-detail-btn::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(rgba(255, 255, 255, 0.2), transparent);
  border-radius: 40rpx;
}

.close-btn-text {
  background: none;
  color: #666;
  font-size: 28rpx;
  border: 1rpx solid #ddd;
  border-radius: 40rpx;
  padding: 14rpx 30rpx;
  position: relative;
  transition: all 0.3s ease;
}

.close-btn-text:active {
  background-color: #f0f0f0;
  color: #333;
}

.close-btn-text::after {
  display: none;
}

.view-btn::after,
.close-btn-text::after {
  border: none;
}