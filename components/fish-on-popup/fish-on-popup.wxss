/* components/fish-on-popup/fish-on-popup.wxss */
.fish-on-popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  z-index: 999;
  display: flex;
  justify-content: center;
  align-items: center;
}

.fish-on-popup-content {
  width: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.25);
  opacity: 0;
  transform: scale(0.8);
  max-width: 600rpx;
  border: 2rpx solid rgba(255, 255, 255, 0.3);
}

.fish-on-header {
  position: relative;
  padding: 36rpx;
  background: linear-gradient(135deg, #FF5722, #FF9800);
  color: #fff;
  text-align: center;
  border-bottom: 4rpx solid rgba(255, 255, 255, 0.2);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.fish-on-title {
  font-size: 42rpx;
  font-weight: bold;
  text-shadow: 2rpx 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.fish-on-body {
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.fish-on-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.fish-on-footer {
  padding: 30rpx;
  display: flex;
  justify-content: center;
}

.fight-btn {
  background: linear-gradient(135deg, #4CAF50, #2E7D32);
  color: white;
  padding: 20rpx 60rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s;
}

.fight-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.2);
}