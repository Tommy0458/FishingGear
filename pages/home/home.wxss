.container {
    padding: 20rpx;
    background: linear-gradient(to bottom, #1E3A8A 0%, #4169E1 70%, #ffffff 100%);
    min-height: 100vh;
    transition: background 0.3s ease-in-out;
}

.welcome-card {
    border-radius: 20rpx;
    padding: 30rpx 20rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: background 0.5s ease-in-out;
}

.welcome-card::after {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200rpx;
    height: 200rpx;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    z-index: 0;
}

.welcome {
    font-size: 36rpx;
    text-align: center;
    font-weight: bold;
    margin-bottom: 10rpx;
    position: relative;
    z-index: 1;
    transition: color 0.5s ease-in-out;
}

.welcome-subtitle {
    font-size: 28rpx;
    margin-top: 10rpx;
    position: relative;
    z-index: 1;
    transition: color 0.5s ease-in-out;
}

.banner-swiper {
  height: 180px;
  margin: 15px 20px;
  border-radius: 12px;
  overflow: hidden;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 移除原有搜索栏样式 */
.search-bar {
  display: none;
}

.search-icon {
    color: #1E3A8A;
    margin-right: 10rpx;
    font-size: 32rpx;
}

.search-bar input {
    flex: 1;
    border: none;
    padding: 10rpx;
    font-size: 28rpx;
}

.search-bar button {
    margin-left: 10rpx;
    padding: 12rpx 24rpx;
    background: linear-gradient(135deg, #FFD700, #FFA500);
    color: #1E3A8A;
    border-radius: 30rpx;
    font-weight: bold;
    font-size: 28rpx;
    box-shadow: 0 2rpx 6rpx rgba(255, 215, 0, 0.3);
    transition: all 0.3s ease;
}

.search-bar button:active {
    transform: scale(0.95);
    box-shadow: 0 1rpx 3rpx rgba(255, 215, 0, 0.2);
}

.bordered {
    border: none;
    border-radius: 20rpx;
    box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.08);
    padding: 25rpx;
    background-color: #fff;
    margin-bottom: 25rpx;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.bordered:active {
    transform: translateY(2rpx);
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.06);
}

.test-section,
.gear-section,
.features-section {
    margin-top: 20rpx;
}

.section-header {
    margin-bottom: 20rpx;
}

.section-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 8rpx;
    display: block;
    transition: color 0.5s ease-in-out;
}

.section-subtitle {
    font-size: 24rpx;
    color: #6c757d;
    display: block;
}

.gear-title {
    transition: color 0.5s ease-in-out;
}

.test-grid,
.gear-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15rpx;
    padding: 10rpx;
}

.test-grid-2x2 {
    grid-template-columns: repeat(2, 1fr);
    gap: 20rpx;
}

.test-more-btn {
    background: linear-gradient(135deg, #FF8C00, #FFA500);
}

.test-btn {
    background: linear-gradient(135deg, #1E3A8A, #4169E1);
    color: white;
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20rpx 15rpx;
    border-radius: 15rpx;
    font-size: 30rpx;
    font-weight: bold;
    box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.3);
    transition: all 0.3s ease;
    border: none;
    position: relative;
    overflow: hidden;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

/* 随机测试按钮特殊样式 */
.random-test-btn {
    background: linear-gradient(45deg, #FF8C00, #FF4500, #FF6347, #FF8C00);
    background-size: 300% 300%;
    animation: randomGradient 3s ease infinite, pulse 2s infinite;
    position: relative;
    overflow: hidden;
}

@keyframes randomGradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

@keyframes pulse {
    0% { transform: scale(1); }
    50% { transform: scale(1.05); }
    100% { transform: scale(1); }
}

.random-test-btn::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: rgba(255, 255, 255, 0.1);
    transform: rotate(45deg);
    animation: shine 3s linear infinite;
}

@keyframes shine {
    0% { transform: translateX(-100%) rotate(45deg); }
    100% { transform: translateX(100%) rotate(45deg); }
}

.random-icon {
    display: inline-block;
    margin-right: 8rpx;
    animation: spin 3s linear infinite;
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

.test-btn::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.2);
    transition: all 0.4s ease;
}

.test-btn:active::after {
    left: 100%;
}

.gear-btn {
    background: linear-gradient(135deg, #D2691E, #FF8C00);
    color: white;
    width: 100%;
    height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 20rpx 15rpx;
    border-radius: 15rpx;
    font-size: 30rpx;
    font-weight: bold;
    box-shadow: 0 4rpx 8rpx rgba(210, 105, 30, 0.3);
    transition: all 0.3s ease;
    border: none;
    position: relative;
    overflow: hidden;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.gear-btn::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.2);
    transition: all 0.4s ease;
}

.gear-btn:active::after {
    left: 100%;
}

.btn-hover {
    transform: scale(0.95);
    opacity: 0.9;
}

.more-arrow {
    text-align: center;
    font-size: 26rpx;
    margin-top: 15rpx;
    font-weight: bold;
    color: #b6d3ec;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.more-arrow:active {
    opacity: 0.7;
}

.arrow-icon {
    font-size: 36rpx;
    margin-left: 5rpx;
    animation: bounce 1.5s infinite;
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
    }
    40% {
        transform: translateY(-10rpx);
    }
    60% {
        transform: translateY(-5rpx);
    }
}

.topicon {
    padding-right: 50rpx
}

.huanyingtips {
    color: #d48806;
    font-size: 28rpx;
    flex: 1;
    margin-left: 20rpx;
}

.close-btn {
    width: 40rpx;
    height: 40rpx;
    transition: transform 0.3s;
}
.close-btn:active {
    transform: scale(0.9);
  }
  
.header {
    margin-bottom: 40rpx;
  }
.first-tip {
    position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  height: 80rpx;
  background: #fffbe6;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  animation: slideDown 0.5s ease;
  /* 适配刘海屏 */
  padding-top: calc(20rpx + env(safe-area-inset-top));
}
@keyframes slideDown {
    from {
      transform: translateY(-100%);
    }
    to {
      transform: translateY(0);
    }
  }
  
.features-section {
    margin-top: 20rpx;
}

.features-title {
    transition: color 0.5s ease-in-out;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 15rpx;
    padding: 10rpx;
}

.feature-btn {
    padding: 25rpx 15rpx;
    border-radius: 15rpx;
    font-size: 28rpx;
    font-weight: bold;
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
    color: white;
    transition: all 0.3s ease;
    border: none;
    position: relative;
    overflow: hidden;
}

.feature-btn::after {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.2);
    transition: all 0.4s ease;
}

.feature-btn:active::after {
    left: 100%;
}

.equipment-btn {
    background: linear-gradient(135deg, #4169E1, #1E90FF);
}

.weather-btn {
    background: linear-gradient(135deg, #FF8C00, #FFA500);
}

.other-btn {
    background: linear-gradient(135deg, #9932CC, #BA55D3);
}

.simulator-btn {
    background: linear-gradient(135deg, #20B2AA, #3CB371);
}

.tips {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 20rpx 30rpx;
    border-radius: 10rpx;
    z-index: 9999;
    font-size: 30rpx;
}