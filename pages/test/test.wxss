/* /pages/test/test.wxss */
.container {
  padding: 30rpx;
  background-color: #F0F8FF;
  min-height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

/* 标题样式 */
.title-box {
  background: linear-gradient(135deg, #1E3A8A, #4169E1);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  margin-bottom: 30rpx;
  text-align: center;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  position: relative;
  overflow: hidden;
}

.title-box::after {
  content: '';
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200rpx;
  height: 200rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 50%;
  z-index: 0;
}

.title {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  position: relative;
  z-index: 1;
}

/* 问题进度样式 */
.progress-info {
  text-align: center;
  margin-bottom: 30rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #1E3A8A;
  font-weight: 500;
}

/* 问题内容样式 */
.question-content {
  background-color: #f9f9f9;
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 40rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border-left: 4rpx solid #1E3A8A;
}

.question-text {
  font-size: 36rpx;
  line-height: 1.6;
  color: #333333;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  font-weight: 500;
  letter-spacing: 0.5rpx;
}

/* 选项样式 */
.options-box {
  margin-bottom: 40rpx;
}

.option-item {
  background: #ffffff;
  border: 1px solid #e0e0e0;
  border-radius: 12rpx;
  margin: 20rpx 0;
  padding: 24rpx 20rpx;
  transition: all 0.25s ease;
  position: relative;
  overflow: hidden;
}

.option-item.active {
  background: #f0f7ff;
  border-color: #4169E1;
  transform: translateX(10rpx);
  box-shadow: 0 2rpx 10rpx rgba(65, 105, 225, 0.15);
}

.option-text {
  font-size: 32rpx;
  color: #444444;
  font-family: 'PingFang SC', 'Helvetica Neue', Arial, sans-serif;
  letter-spacing: 0.3rpx;
  line-height: 1.5;
}

/* 进度条样式 */
.progress-bar-container {
  margin-bottom: 40rpx;
}

.progress-percent {
  font-size: 28rpx;
  color: #1E3A8A;
  display: block;
  text-align: center;
  margin-bottom: 10rpx;
}

/* 导航按钮样式 */
.nav-buttons {
    display: flex;
    justify-content: space-between;
    margin-top: 20px;
    width: 100%;
}

.nav-btn {
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #1E3A8A, #4169E1);
  color: #fff;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.3);
  transition: all 0.3s ease;
}

.nav-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(30, 58, 138, 0.2);
}

.nav-btn.disabled {
  background: #e0e6ed;
  color: #999;
  box-shadow: none;
  pointer-events: none;
}

/* 返回主页按钮样式 */
.home-btn {
  position: fixed;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 20rpx;
  background: linear-gradient(135deg, #FFD700, #FFA500);
  color: #1E3A8A;
  border-radius: 50rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 215, 0, 0.3);
  font-weight: bold;
}

.home-btn:active {
  transform: translateY(-50%) scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(255, 215, 0, 0.2);
}

/* 结果弹窗样式 */
.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.result-content {
  background: white;
  width: 80%;
  padding: 40rpx;
  border-radius: 24rpx;
  animation: scaleIn 0.3s ease;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.2);
}

@keyframes scaleIn {
  from { transform: scale(0.8); opacity: 0; }
  to { transform: scale(1); opacity: 1; }
}

.result-title {
  display: block;
  font-size: 40rpx;
  color: #1E3A8A;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20rpx;
}

.result-desc {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
  text-align: center;
}

.recommend-section {
  margin: 40rpx 0;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
}

.section-container {
  margin: 30rpx 0;
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
}

.section-title,
.recommend-title {
  display: block;
  font-size: 32rpx;
  color: #1E3A8A;
  text-align: center;
  margin-bottom: 20rpx;
  font-weight: 600;
}

.recommend-item {
  padding: 15rpx 20rpx;
  background: #ffffff;
  border-radius: 8rpx;
  margin: 10rpx 0;
  font-size: 28rpx;
  color: #2E4053;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.result-btn {
  margin-top: 40rpx;
  background: linear-gradient(135deg, #1E3A8A, #4169E1);
  color: white;
  border-radius: 50rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 12rpx rgba(30, 58, 138, 0.3);
}

.result-btn:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 6rpx rgba(30, 58, 138, 0.2);
}
/* 新增字体样式 */
.question-content {
    font-family: 'Helvetica Neue', sans-serif;
    letter-spacing: 0.5px;
}

.options-box {
    font-family: system-ui, -apple-system, sans-serif;
}

/* 问题容器优化 */
.question-content {
    background: #f8f9fa;
    border-radius: 12px;
    padding: 20px;
    margin: 15px 0;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}




.prev-btn {
    margin-right: auto;
}

.next-btn {
    margin-left: auto;
}