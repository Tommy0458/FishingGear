.container {
  height: 100vh;
  position: relative;
}

.background-img {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -1;
}

.info-btn {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  font-size: 40rpx;
  color: #2b8cff;
  z-index: 999;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding-top: 0;
  position: absolute;
  width: 100%;
  top: 0;
}

.welcome-text {
  font-size: 38rpx;
  color: #333;
  margin-bottom: 60rpx;
  font-weight: bold;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
}

.start-btn {
  width: 300rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  color: white;
  font-size: 32rpx;
}