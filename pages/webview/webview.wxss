/* pages/webview/webview.wxss */
web-view {
  width: 100%;
  height: 100vh;
}

.webview-container {
  position: relative;
  width: 100%;
  height: 100vh;
}

/* 浮动主页按钮 */
.float-home-btn {
  position: fixed;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 80rpx;
  height: 80rpx;
  background-color: #1E3A8A;
  color: white;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  z-index: 999;
}

.float-home-btn:active {
  background-color: #152a63;
  transform: translateY(-50%) scale(0.95);
}