/* pages/news/news.wxss */
.container {
    padding: 20rpx;
    background-color: #f8f9fa;
    min-height: 100vh;
}

/* 页面标题 */
.header {
    margin-bottom: 20rpx;
    padding-bottom: 15rpx;
    border-bottom: 1rpx solid rgba(0,0,0,0.05);
}

.title {
    font-size: 36rpx;
    font-weight: bold;
    color: #1E3A8A;
    margin-bottom: 8rpx;
    display: block;
    letter-spacing: 1px;
}

.subtitle {
    font-size: 24rpx;
    color: #6c757d;
    display: block;
}

/* 分类标签 */
.category-tabs {
    display: flex;
    flex-wrap: wrap;
    gap: 15rpx;
    margin-bottom: 20rpx;
}

.tab {
    padding: 10rpx 20rpx;
    font-size: 24rpx;
    border-radius: 30rpx;
    background-color: #e9ecef;
    color: #495057;
    transition: all 0.3s ease;
}

.tab.active {
    background-color: #1E3A8A;
    color: white;
    box-shadow: 0 2rpx 8rpx rgba(30, 58, 138, 0.3);
    transform: translateY(-2rpx);
}

/* 天气卡片 */
.weather-card {
    background: linear-gradient(135deg, #1E3A8A, #4169E1);
    border-radius: 20rpx;
    padding: 5rpx;
    color: white;
    margin-bottom: 25rpx;
    box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.15);
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.weather-card:active {
    transform: scale(0.98);
    box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.weather-card-inner {
    display: flex;
    justify-content: space-between;
    padding: 20rpx;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 16rpx;
    backdrop-filter: blur(5px);
    -webkit-backdrop-filter: blur(5px);
}

.weather-card::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200rpx;
    height: 200rpx;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    z-index: 0;
}

.weather-card::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -30%;
    width: 150rpx;
    height: 150rpx;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 50%;
    z-index: 0;
}

.weather-info {
    display: flex;
    flex-direction: column;
    z-index: 1;
}

.weather-location {
    font-size: 28rpx;
    margin-bottom: 10rpx;
    opacity: 0.9;
}

.weather-temp {
    font-size: 48rpx;
    font-weight: bold;
    text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.weather-detail {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: center;
    z-index: 1;
}

.weather-condition, .weather-wind, .weather-humidity {
    font-size: 24rpx;
    margin-bottom: 6rpx;
    opacity: 0.9;
}

/* 热搜列表 */
.news-list {
    max-height: calc(100vh - 280rpx);
    border-radius: 20rpx;
    overflow: hidden;
    padding: 5rpx;
}

.news-item {
    display: flex;
    padding: 30rpx 20rpx;
    background-color: white;
    border-radius: 16rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
}

.news-item-hover {
    transform: scale(0.98);
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
    background-color: #f8f9fa;
}

.news-rank {
    width: 60rpx;
    height: 60rpx;
    background: linear-gradient(135deg, #1E3A8A, #4169E1);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    margin-right: 20rpx;
    flex-shrink: 0;
    box-shadow: 0 4rpx 8rpx rgba(30, 58, 138, 0.3);
}

.news-content {
    flex: 1;
    overflow: hidden;
}

.news-title {
    font-size: 28rpx;
    font-weight: 500;
    color: #212529;
    margin-bottom: 10rpx;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    line-height: 1.4;
}

.news-meta {
    display: flex;
    justify-content: space-between;
    font-size: 22rpx;
    color: #6c757d;
}

.news-thumbnail {
    width: 120rpx;
    height: 120rpx;
    border-radius: 10rpx;
    margin-left: 20rpx;
    flex-shrink: 0;
    object-fit: cover;
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

/* 加载更多 */
.load-more {
    text-align: center;
    padding: 30rpx 0;
    color: #6c757d;
    font-size: 26rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    transition: all 0.3s ease;
}

.load-more-hover {
    opacity: 0.7;
    transform: scale(0.98);
}

.arrow-down {
    font-size: 36rpx;
    margin-top: 5rpx;
    animation: bounce 1.5s infinite;
}

@keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
        transform: translateY(0);
    }
    40% {
        transform: translateY(-10rpx);
    }
    60% {
        transform: translateY(-5rpx);
    }
}

/* 无数据提示 */
.no-data {
    text-align: center;
    padding: 100rpx 0;
    color: #6c757d;
    font-size: 28rpx;
}

/* 天气卡片中添加日期和气压的样式 */
.weather-date {
    font-size: 24rpx;
    margin-bottom: 6rpx;
    opacity: 0.9;
}

.weather-pressure {
    font-size: 24rpx;
    margin-bottom: 6rpx;
    opacity: 0.9;
}

/* 浮动主页按钮 */
.float-home-btn {
    position: fixed;
    right: 20rpx;
    top: 50%;
    transform: translateY(-50%);
    width: 80rpx;
    height: 80rpx;
    background: linear-gradient(135deg, #1E3A8A, #4169E1);
    color: white;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
    z-index: 999;
    transition: all 0.3s ease;
}

.float-btn-hover {
    transform: translateY(-50%) scale(0.9);
    box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.15);
}

.home-btn-text {
    font-weight: bold;
}

.float-home-btn:active {
    background-color: #152a63;
    transform: translateY(-50%) scale(0.95);
}