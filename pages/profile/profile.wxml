<!--pages/profile/profile.wxml-->
<page-meta>
  <!-- 自定义导航栏 -->
  <navigation-bar title="我的" background="#1E3A8A" color="#ffffff" back="{{false}}"></navigation-bar>
</page-meta>

<view class="profile-container">
  <!-- 用户信息卡片 -->
  <view class="user-card">
    <view class="card-background"></view>
    <view class="user-info">
      <image class="user-avatar" src="/images/tab/Sport-Fishing.png" mode="aspectFill"></image>
      <view class="user-details">
        <text class="user-name">钓鱼爱好者</text>
        <view class="achievement-level">
          <text class="level-text">成就等级</text>
          <view class="level-badge">Lv.5</view>
        </view>
      </view>
    </view>
    <view class="stats-row">
      <view class="stat-item">
        <text class="stat-value">12</text>
        <text class="stat-label">钓鱼次数</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{achievementScore}}</text>
        <text class="stat-label">成就分数</text>
      </view>
      <view class="stat-item">
        <text class="stat-value">{{unlockedAchievements}}</text>
        <text class="stat-label">已解锁成就</text>
      </view>
    </view>
  </view>

  <!-- 功能菜单 -->
  <view class="menu-section">
    <view class="menu-item" hover-class="menu-item-hover" bindtap="navigateToSettings">
      <view class="menu-icon-container">
        <image class="menu-icon" src="/images/tab/路亚轮.png"></image>
      </view>
      <text class="menu-text">设置</text>
      <image class="arrow-icon" src="/images/icon/selection-tool.png"></image>
    </view>
    <view class="menu-item" hover-class="menu-item-hover" bindtap="navigateToFavorites">
      <view class="menu-icon-container">
        <image class="menu-icon" src="/images/tab/路亚配件.png"></image>
      </view>
      <text class="menu-text">我的收藏</text>
      <image class="arrow-icon" src="/images/icon/selection-tool.png"></image>
    </view>
    <view class="menu-item" hover-class="menu-item-hover" bindtap="navigateToFeedback">
      <view class="menu-icon-container">
        <image class="menu-icon" src="/images/tab/钓鱼.png"></image>
      </view>
      <text class="menu-text">意见反馈</text>
      <image class="arrow-icon" src="/images/icon/selection-tool.png"></image>
    </view>
  </view>

  <!-- 更新日志 - 可折叠设计 -->
  <view class="update-log-section">
    <view class="section-header" bindtap="toggleUpdateLog">
      <text class="section-title">更新日志</text>
      <view class="toggle-icon {{isUpdateLogOpen ? 'open' : ''}}">
        <image src="/images/icon/selection-tool.png"></image>
      </view>
    </view>
    <view class="log-list {{isUpdateLogOpen ? 'open' : 'closed'}}">
      <view class="log-item">
        <view class="log-header">
          <text class="log-version">v1.2.0</text>
          <text class="log-date">2025-03</text>
        </view>
        <view class="log-content">
          <view class="log-entry"><text class="log-bullet">•</text><text>新增钓鱼成就系统</text></view>
          <view class="log-entry"><text class="log-bullet">•</text><text>优化用户界面体验</text></view>
          <view class="log-entry"><text class="log-bullet">•</text><text>修复已知问题</text></view>
        </view>
      </view>
      <view class="log-item">
        <view class="log-header">
          <text class="log-version">v1.1.0</text>
          <text class="log-date">2025-03</text>
        </view>
        <view class="log-content">
          <view class="log-entry"><text class="log-bullet">•</text><text>新增测试功能数据</text></view>
          <view class="log-entry"><text class="log-bullet">•</text><text>修复已知问题</text></view>
          <view class="log-entry"><text class="log-bullet">•</text><text>性能优化</text></view>
        </view>
      </view>
      <view class="log-item">
        <view class="log-header">
          <text class="log-version">v1.0.0</text>
          <text class="log-date">2025-03</text>
        </view>
        <view class="log-content">
          <view class="log-entry"><text class="log-bullet">•</text><text>小程序首次发布</text></view>
          <view class="log-entry"><text class="log-bullet">•</text><text>基础功能上线</text></view>
        </view>
      </view>
    </view>
  </view>

  <!-- 底部版权信息 -->
  <view class="footer">
    <text class="copyright">© 2025 钓鱼人测试 版权所有</text>
  </view>
</view>